<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1> My playlists</h1>
        <%= link_to "Create new Playlist", new_playlist_path, class: 'btn btn-primary btn-lg' %>
    </div>

    <div class="row py-4">
      <% @playlists.each do |playlist|%>
        <div class="col-12 col-sm-6 col-md-4 mb-4">
         <% if playlist.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path playlist.photo.key, height: 300, crop: :fill %>')">
            <%= playlist.name%>
            <div class="genre">
              <%= playlist.genre %>
            </div>
            <div class="actions">

              <%= link_to edit_playlist_path(playlist) do %>
                <i class="fas fa-edit"></i>
              <% end %>

              <%= link_to playlist_path(playlist), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fas fa-trash"></i>
              <% end %>

            </div>

          </div>
          <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(20,20,20,0.3)))">
            <%= playlist.name%>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
</div>